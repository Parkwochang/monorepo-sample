    "@remixicon/react": "^4.6.0",
    "@tanstack/react-virtual": "^3.13.8",
    "cmdk": "^1.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.11",
    "lucide-react": "^0.515.0",
    "motion": "^12.23.12",
    "next-themes": "^0.4.6",
    "react-day-picker": "^9.8.1",
